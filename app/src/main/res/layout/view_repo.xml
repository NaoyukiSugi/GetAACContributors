<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/repo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/repo_margin"
        android:layout_marginTop="@dimen/repo_margin"
        android:layout_marginEnd="@dimen/repo_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/repo_name_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="repo_name" />

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/repo_margin"
        android:layout_marginTop="@dimen/repo_margin"
        android:layout_marginBottom="@dimen/repo_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repo_name"
        tools:text="language" />

    <TextView
        android:id="@+id/updated_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/repo_margin"
        android:layout_marginEnd="@dimen/repo_margin"
        app:layout_constraintBottom_toBottomOf="@id/language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/language"
        app:layout_constraintTop_toTopOf="@id/language"
        tools:text="updated_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
